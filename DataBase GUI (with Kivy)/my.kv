<MyButt>:
    halign: 'left'
    text_size: self.size
    background_color: (.3, .6, .7, 1)

<ScrollableLabel>:
    ScrollView:
        Label:
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            color: (.0, .6, .9, 1)
            text: root.text
            halign: 'center'
<HScrollableLabel>:
    ScrollView:
        Label:
            size_hint_x: None
            color: (.0, .6, .9, 1)
            text: root.text
            halign: 'left'
            width: self.texture_size[0]
            valign: 'top'
